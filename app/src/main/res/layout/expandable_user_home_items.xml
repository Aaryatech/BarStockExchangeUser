<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llExpUserList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/tvExpUserItems_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/sofiapro_light"
            android:maxLines="1"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvExpUserItems_high"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="2"
            android:fontFamily="@font/sofiapro_light"
            android:gravity="center_horizontal|center_vertical"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:textAllCaps="true"
            android:textColor="@color/colorHigh"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tvExpUserItems_low"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="2"
            android:fontFamily="@font/sofiapro_light"
            android:gravity="center_horizontal|center_vertical"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:textAllCaps="true"
            android:textColor="@color/colorLow"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvExpUserItems_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight="2"
            android:background="@color/colorHigh"
            android:fontFamily="@font/sofiapro_light"
            android:gravity="center_horizontal|center_vertical"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/ivExpUserItems_arrow"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/up_icon" />

    </LinearLayout>

</LinearLayout>