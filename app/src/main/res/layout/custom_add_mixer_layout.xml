<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingTop="15dp">

    <LinearLayout
        android:id="@+id/llAddMixerLayout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAddMixerLayout_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/sofiapro_light"
            android:textAllCaps="true"
            android:textColor="@color/colorText" />

        <TextView
            android:id="@+id/tvAddMixerLayout_price"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/sofiapro_light"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/tvAddMixerLayout_qty"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/sofiapro_bold"
            android:gravity="end"
            android:textColor="@color/colorGreen" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/ivAddMixerLayout_cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/cancel_icon"
            android:visibility="gone" />

    </LinearLayout>


</LinearLayout>