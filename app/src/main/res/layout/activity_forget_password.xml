<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    tools:context="com.ats.barstockexchangeuser.activity.ForgetPasswordActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llForgetPass_Mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="15dp"
                    android:clipToPadding="false"
                    android:gravity="bottom"
                    android:textColorHint="@color/colorText">

                    <EditText
                        android:id="@+id/edForgetPass_Mobile"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/edittext_border_layout"
                        android:fontFamily="@font/sofiapro_light"
                        android:hint="Mobile Number"
                        android:inputType="number"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorText" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/tvForgetPass_SubmitMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="@color/colorOrange"
                    android:fontFamily="@font/sofiapro_light"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="Submit"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llForgetPass_OTP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginBottom="10dp"
                    android:clipToPadding="false"
                    android:gravity="bottom"
                    android:textColorHint="@color/colorText">

                    <EditText
                        android:id="@+id/edForgetPass_OTP"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/edittext_border_layout"
                        android:fontFamily="@font/sofiapro_light"
                        android:hint="OTP Number"
                        android:inputType="number"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorText" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/tvForgetPass_SubmitOTP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="@color/colorOrange"
                    android:fontFamily="@font/sofiapro_light"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="Submit OTP"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llForgetPass_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/sofiapro_bold"
                    android:text="Reset Password"
                    android:textColor="@color/colorText" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#bcb9b9" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginBottom="20dp"
                    android:clipToPadding="false"
                    android:gravity="bottom"
                    android:textColorHint="@color/colorText"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/colorOrange">

                    <EditText
                        android:id="@+id/edForgetPass_Password"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/edittext_border_layout"
                        android:fontFamily="@font/sofiapro_light"
                        android:hint="Password"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorText" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginBottom="10dp"
                    android:clipToPadding="false"
                    android:gravity="bottom"
                    android:textColorHint="@color/colorText"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/colorOrange">

                    <EditText
                        android:id="@+id/edForgetPass_ConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/edittext_border_layout"
                        android:fontFamily="@font/sofiapro_light"
                        android:hint="Confirm Password"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorText" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/tvForgetPass_Submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="@color/colorOrange"
                    android:fontFamily="@font/sofiapro_light"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="Submit"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>
